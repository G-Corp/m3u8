# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2

[*.erl]
max_line_length = 180

[*.py]
indent_style = space
indent_size = 4

[Makefile,*.mk]
indent_style = tab

[*.md]
trim_trailing_whitespace = false

